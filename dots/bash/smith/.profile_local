# config editing
alias codex='micro /home/y2k/codex'
alias bashrc='micro /home/y2k/.profile'
alias profile='micro /home/y2k/.profile'
alias glance-conf='micro /home/y2k/docker/komodo/stacks-data/glance/configdir/glance.yml'
alias quantum-conf='micro /home/y2k/docker/komodo/stacks-data/quantum/data/config.yaml'
alias caddy-conf='micro /home/y2k/docker/komodo/stacks-data/caddy/caddyfiledir/Caddyfile'

# port tunneling (with loophole)
alias loophole='cd /home/y2k/tunnels/loophole-cli/'
alias expose='/home/y2k/tunnels/loophole-cli/loophole http'
alias expose-all='(
/home/y2k/tunnels/loophole-cli/loophole http 17976 --hostname neodrive &
sleep 5 &&
/home/y2k/tunnels/loophole-cli/loophole http 3000 --hostname neodocs
 )'

# fail2ban
alias f2b='sudo fail2ban-client status'
alias f2b-sshd='sudo fail2ban-client status sshd'
alias f2b-log='journalctl -u fail2ban -f'
alias f2b-logs='journalctl -u fail2ban --since "1 hour ago"'
alias f2b-conf='sudo fail2ban-client -d'
alias f2b-unban='sudo fail2ban-client set sshd unbanip'

# directories
alias wad='cd /home/y2k && lsd'
alias stk='cd /home/y2k/docker/komodo/stacks/ && lsd'
alias stks='cd /home/y2k/docker/komodo/stacks/ && lsd'
alias stack='cd /home/y2k/docker/komodo/stacks/ && lsd'
alias stacks='cd /home/y2k/docker/komodo/stacks/ && lsd'
alias stacked='cd /home/y2k/docker/komodo/stacks/ && lsd'
alias stk-db='cd /home/y2k/docker/komodo/stacks-data && lsd'
alias stks-db='cd /home/y2k/docker/komodo/stacks-data && lsd'
